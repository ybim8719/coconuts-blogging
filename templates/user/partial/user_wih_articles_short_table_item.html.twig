<div class="story-article border-stylayÂ ">
    <div class="story-article-header is-row">
        <img src ="{{ vich_uploader_asset(writer) }}"
             alt="{{ writer.username }}"
             class ="coconuts-round-picture rikiki-img"
        >
        <div class="is-row>
            <a href="{{ path('user_show', {'id': writer.id})}}">
                <p class="is-title">{{writer.username}}</p>
            </a>
            <p class="is-secondary">Membre depuis le {{createdAt|date("d-m-Y")}}</p>
            <p>{{ isAuthor is defined ? (isAuthor == "1" ? "AUTEUR" : "") : ""}} </p>
            <p>{{ isAdmin is defined ? (isAdmin == "1" ? "ADMIN" : "") : ""}} </p>
            {% if nbOfArticles is defined %}
                <p >Nb d'articles : {{ nbOfArticles }}</p>
            {% endif %}
        </div>
    </div>
    {% if articlesOfWriter is defined %}
        {% for article in articlesOfWriter %}
            <div>
                <div class="is-row">
                    <div>
                        <a href="{{ path('article_show', {'id': article.id})}}">
                            <p class="is-main-title">{{article.title}}</p>
                        </a>
                        <p class="is-secondary">{{article.updatedAt|date("d-m-Y")}} - XX minutes read</p>
                        <span class="is-secondary" data-article-id = {{ article.id }}>
                            <i class="fas fa-heart"></i>
                            {{article.nbOfLikes}}
                        </span>
                    </div>
                </div>
            </div>
        {% endfor %}
    {% endif %}
</div>