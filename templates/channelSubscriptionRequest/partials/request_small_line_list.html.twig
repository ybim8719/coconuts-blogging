    <div class="story-article-header is-row">
        <a href="{{ path('user_show', {'id': user.id})}}">
            <img src ="{{ vich_uploader_asset(user) }}"
                 alt="{{ user.username }}"
                 class ="coconuts-round-picture rikiki-img"
            >
        </a>
        <div>
            <a href="{{ path('user_show', {'id': user.id }) }}">
                <p class="is-title">{{ user.username }}</p>
            </a>
            <p class="is-secondary">inscrit depuis le {{ user.createdAt|date("d-m-Y") }}</p>
            {{ render_author_badge(user.hasWritten) }}
            <p>Nb d'articles : {{ user.nbOfArticles }}</p>
        </div>
        <div>
            {% if status == "pending" %}
                {{ render_normal_size_badge_by_name ('Accepter',"accept", request.id) }}
                {{ render_normal_size_badge_by_name ('Refuser', "refuse", request.id) }}
            {% else %}
                {{ render_normal_size_badge_by_name ("OK c'est bon","accept-anyway", request.id) }}
            {% endif %}

        </div>
    </div>
</div>